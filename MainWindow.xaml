<Window x:Class="PR283_Assignment_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p = "clr-namespace:PR283_Assignment_2.Properties"

        xmlns:local="clr-namespace:PR283_Assignment_2"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.GameTitle}" Width="660" Height="600">

    <Grid x:Name="MainGrid" Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="0,49,-0.4,0.2" Height="50" VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Label x:Name="TimerLabel"  Width="50" Margin="95,0,0,0" Content="{x:Static p:Resources.Timer}" HorizontalAlignment="Left" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="TimerFigureLabel"  Content=""  HorizontalAlignment="Left" Margin="155,0,0,0" Width="138" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="ScoreLabel" 
                   Content="{x:Static p:Resources.Score}"  Margin="326,0,0,0" Width="50" HorizontalAlignment="Left" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="ScoreFigureLabel" Content="" HorizontalAlignment="Left" Margin="396,0,0,0" Width="100" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>
        <Menu  Grid.Row="0" Grid.ColumnSpan="2" x:Name="MainMenu" Height="50" VerticalAlignment="Top" HorizontalContentAlignment="Center" Margin="0,0,-0.4,0" Grid.RowSpan="2" >
            <ComboBox x:Name="GridSizeComboxBox" Height="50" Width="65" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" SelectedIndex="0">
                <ComboBoxItem Content="4x4" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <ComboBoxItem Content="6x6" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </ComboBox>
            <Button x:Name="StartButton4x4" Content="{x:Static p:Resources.Start}" Height="50" Width="60" 
ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" Click="StartButton_Click" CommandParameter="4"/>

            <Button x:Name="LoadButton" Content="{x:Static p:Resources.Load}" Height="50" Width="60" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LoadButton_Click"/>
            <Button x:Name="SaveButton" Content="{x:Static p:Resources.Save}" Height="50" Width="60" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="SaveButton_Click"/>
            <Button x:Name="RestartButton" Content="{x:Static p:Resources.Restart}" Height="50" Width="60" Click="RestartButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label x:Name="LanguageSelectLabel" Content="{x:Static p:Resources.Language}" Height="50" Width="65" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <ComboBox x:Name="LanguageComboBox" Width="120" Height="50" SelectionChanged="LanguageComboBox_SelectionChanged" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" SelectedIndex="-1">
                <ComboBoxItem x:Name="EnglishLanguageButton" Width="120" Content="{x:Static p:Resources.English}" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="en-US"/>
                <ComboBoxItem x:Name="TraditionalChineseLanguageButton" Width="120" Content="{x:Static p:Resources.TraditionalChinese}" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="zh-TW"/>
            </ComboBox>


        </Menu>
        <Grid x:Name="DynamicGrid" Margin="10,10.8,0,10.8"  Background="#FFEAFCFF" Height="360" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" Width="360" Grid.RowSpan="2"/>
        <StackPanel x:Name="InputButtonStackPanel" Height="70" Margin="0,0,-0.4,0.2" VerticalAlignment="Bottom" Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="2" Drop="InputButtonStackPanel_Drop" AllowDrop="True" >
            <Button x:Name="InputButton1" Content="{x:Static p:Resources.One}" Height="50" Width="50" Margin="10,5,10,5"  Cursor="Hand" PreviewMouseLeftButtonDown="Button_MouseButtonDown" 
              CommandParameter="1"/>
            <Button x:Name="InputButton2" Content="{x:Static p:Resources.Two}" Height="50" Width="50" Margin="10,5,10,5"  Cursor="Hand" PreviewMouseLeftButtonDown="Button_MouseButtonDown"               CommandParameter="2"/>
            <Button x:Name="InputButton3" Content="{x:Static p:Resources.Three}" Height="50" Width="50" Margin="10,5,10,5"  Cursor="Hand" PreviewMouseLeftButtonDown="Button_MouseButtonDown"               CommandParameter="3"/>
            <Button x:Name="InputButton4" Content="{x:Static p:Resources.Four}" Height="50" Width="50" Margin="10,5,10,5"  Cursor="Hand" PreviewMouseLeftButtonDown="Button_MouseButtonDown"               CommandParameter="4"/>
            <Button x:Name="InputButton5" Content="{x:Static p:Resources.Five}" Height="50" Width="50" Margin="10,5,10,5"  Cursor="Hand" PreviewMouseLeftButtonDown="Button_MouseButtonDown"               CommandParameter="5"/>
            <Button x:Name="InputButton6" Content="{x:Static p:Resources.Six}" Height="50" Width="50" Margin="10,5,10,5"  Cursor="Hand" PreviewMouseLeftButtonDown="Button_MouseButtonDown"               CommandParameter="6"/>
            <Button x:Name="InputButton7" Content="{x:Static p:Resources.Seven}" Height="50" Width="50" Margin="10,5,10,5"  Cursor="Hand" PreviewMouseLeftButtonDown="Button_MouseButtonDown"               CommandParameter="7"/>
            <Button x:Name="InputButton8" Content="{x:Static p:Resources.Eight}" Height="50" Width="50" Margin="10,5,10,5"  Cursor="Hand" PreviewMouseLeftButtonDown="Button_MouseButtonDown"               CommandParameter="8"/>
            <Button x:Name="InputButton9" Content="{x:Static p:Resources.Nine}" Height="50" Width="50" Margin="10,5,10,5"  Cursor="Hand" PreviewMouseLeftButtonDown="Button_MouseButtonDown"               CommandParameter="9"/>
        </StackPanel>
        <ScrollViewer x:Name="TextScrollViewer" Grid.Column="1" Margin="10" Grid.Row="2" Background="#FFFFF8DF" VerticalScrollBarVisibility="Auto" CanContentScroll="True" FontSize="20" MaxHeight="300"/>
        <TextBlock x:Name="GetHintTextBlock" Text="{x:Static p:Resources.GetHintTextBlockMsg}" Grid.Column="1" Margin="12.4,10.6,9.6,9.8" Grid.Row="3" FontSize="18" TextWrapping="Wrap" TextAlignment="Center" AllowDrop="True" Background="#FFF7A9A9" Drop="GetHintTextBlock_Drop"/>


    </Grid>
</Window>
