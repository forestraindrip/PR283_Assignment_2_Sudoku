            <Button Content="Button1" Width="50" Margin="10" Height="50" Click="Button_Click_1"/>
            <Button Content="Button2" Width="50" Height="50" Margin="10"/>
            <Button Content="Button3" Height="50" Margin="10" Width="50"/>
