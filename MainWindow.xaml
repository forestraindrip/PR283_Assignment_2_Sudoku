<Window x:Class="PR283_Assignment_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR283_Assignment_2"
        mc:Ignorable="d"
        Title="MainWindow" Width="660" Height="600">

    <Grid x:Name="mainGrid" Margin="10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="262*"/>
            <RowDefinition Height="287*"/>
        </Grid.RowDefinitions>
        <Menu x:Name="mainMenu" Height="49" VerticalAlignment="Top" HorizontalContentAlignment="Center">
            <MenuItem Header="Load" Height="50" Width="60" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Auto" HorizontalContentAlignment="Center"/>
            <MenuItem Header="Save" Height="50" Width="60" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <MenuItem Header="Restart" Height="50" Width="60"/>
            <ComboBox Width="80" Height="50">
                <ComboBoxItem Content="English" HorizontalAlignment="Left" Width="60"/>
                <ComboBoxItem Content="Traditional Chinese" HorizontalAlignment="Left" Width="60"/>
            </ComboBox>
        </Menu>
        <Grid Margin="20,80,0,100" Grid.RowSpan="2" Background="#FFEAFCFF" HorizontalAlignment="Left" Width="347">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.16*"/>
                <ColumnDefinition Width="0.16*"/>
                <ColumnDefinition Width="0.16*"/>
                <ColumnDefinition Width="0.16*"/>
                <ColumnDefinition Width="0.16*"/>
                <ColumnDefinition Width="0.16*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.16*"></RowDefinition>
                <RowDefinition Height="0.16*"></RowDefinition>
                <RowDefinition Height="0.16*"></RowDefinition>
                <RowDefinition Height="0.16*"></RowDefinition>
                <RowDefinition Height="0.16*"></RowDefinition>
                <RowDefinition Height="0.16*"></RowDefinition>
            </Grid.RowDefinitions>
            <Button Content="Button" Margin="0"/>
            <Button Content="Button" Grid.Column="1" Margin="0"/>
            <Button Content="Button" Grid.Column="2" Margin="3.4,7,0,0" Width="43" Height="41"/>
            <Button Content="Button" Grid.Column="3" Margin="11,14,5,4"/>
            <Button Content="Button" Grid.Column="4" Margin="15,13,3,6"/>
            <Button Content="Button" Grid.Column="5" Margin="14,18,6,1"/>
        </Grid>
        <TextBox Margin="0,80,20,100" TextWrapping="Wrap" Text="TextBox" Grid.RowSpan="2" Background="#FFFFF4CD" HorizontalAlignment="Right" Width="217"/>
        <StackPanel Height="74" Margin="0" VerticalAlignment="Bottom" Orientation="Horizontal" Grid.Row="1">
            <Button Content="Button1" Height="50" Width="50" Margin="10"  Cursor="Hand"/>
            <Button Content="Button2" Height="50" Width="50" Margin="10"  Cursor="Hand"/>
            <Button Content="Button3" Height="50" Width="50" Margin="10"  Cursor="Hand"/>
            <Button Content="Button4" Height="50" Width="50" Margin="10"  Cursor="Hand"/>
            <Button Content="Button5" Height="50" Width="50" Margin="10"  Cursor="Hand"/>
            <Button Content="Button6" Height="50" Width="50" Margin="10"  Cursor="Hand"/>
            <Button Content="Button7" Height="50" Width="50" Margin="10"  Cursor="Hand"/>
            <Button Content="Button8" Height="50" Width="50" Margin="10"  Cursor="Hand"/>
            <Button Content="Button9" Height="50" Width="50" Margin="10"  Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
