            <Button Content="Button" Grid.Column="6" Margin="9.8,13,0,0" Width="64" Height="40"/>
        </Grid>
        <Menu x:Name="mainMenu" Height="49" Margin="0,0,-0.4,0" VerticalAlignment="Top" HorizontalContentAlignment="Center">
