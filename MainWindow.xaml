            <Button Content="Button8" Width="50" Margin="10" Height="50"/>
            <Button Content="Button9" Width="50" Margin="10" Height="50"/>
        </StackPanel>
        <Grid Height="404" Margin="35,77,21.6,69.4" Width="577">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.16*"/>
                <ColumnDefinition Width="0.16*"/>
                <ColumnDefinition Width="0.16*"/>
                <ColumnDefinition Width="0.16*"/>
                <ColumnDefinition Width="0.16*"/>
                <ColumnDefinition Width="0.16*"/>
                <ColumnDefinition Width="0.16*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.16*"></RowDefinition>
                <RowDefinition Height="0.16*"></RowDefinition>
